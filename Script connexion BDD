<?php

	//Script connexion à la BDD
	
	$host_bdd = 'localhost';
	$user_bdd = 'root';
	$pass_bdd = '';
	$base_bdd = 'jeremylouis';
	$table = 'abonnes';
	
	try{
		$bdd = new PDO('mysql:host='.$host_bdd.';dbname='.$base_bdd.';charset=utf8', $user_bdd, $pass_bdd);
		echo"<h4>Connexion au serveur OK<br></h4>";
		echo"<h4>Connexion à la BDD OK<br></h4>";
	}
	catch (Exception $e)
	{
		die('Erreur : '.$e->getMessage());
		echo"<h4>Connexion au serveur ECHOUE<br></h4>";
		echo"<h4>Connexion à la BDD ECHOUE<br></h4>";
	}
	

?>
